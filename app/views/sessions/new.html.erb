<h1>Sign In!</h1>

<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
    
    <p>
    <%= label_tag(:name) %>
    <%= select_tag 'user_name', options_from_collection_for_select(@users, 'name','name') %>
    </p>

    <p>
    <%= label_tag(:password) %>
    <%= password_field_tag(:password)%>
    </p>

     <p>
    <%= submit_tag("Sign In")%>
    </p>

<% end %>

